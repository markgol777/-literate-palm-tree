<h1>Add course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter a name"></span>
    </div>

    <div class="input-field">
        <input id="price" type="text" name="price" class="validate" required min="10">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter a price"></span>
    </div>

    <div class="input-field">
        <input id="image" type="text" name="url" class="validate" required>
        <label for="image">URL image</label>
        <span class="helper-text" data-error="Enter a url"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="add course">
    {{!-- <button class="btn btn-primary">Add course</button> --}}
</form>
